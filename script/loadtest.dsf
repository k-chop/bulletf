emitter way4 {
  init {
    spd(0)
    $0 = @aim
    $1 = $0
  }
  run {
    $1 -= 30
    repeat 4 {
      $2 = @rnd(0.1,0.3)
      fire(tailshot, ENG05R, $1, $2)
      $1 += 20
    }
