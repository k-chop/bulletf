bullet simple {
  data {
    draw_type := "rotate:6"
  }

  run {
    nop
  }
}

bullet tailshot {
  run {
    repeat 0 {
      fx(tail, ENG01B)
      wait(4)
    }
  }
}

bullet accelshot {
  init {
    $0 = @spd
    $1 = 0.015
  }
  run {
    se(shot03, 0.2)
    repeat 0 {
      spd($1, relative)
      wait(10)
    }
  }
}

bullet exsimple {
  run {
    se(shot03, 0.2)
  }
}

bullet delayaim {
  run {
    wait(60)
    spd(0.3, absolute)
    dir(@aim)
  }
}

enemy t01 {
  init {
    dir(90)
    spd(0.25)
  }
  run {
    wait(15)
    $0 = 3
    repeat 30 {
      dir($0, relative)
      wait(1)
    }
    wait(10)
    se(shot03, 1.0, 0.2)
    fire(simple, ENG01B)
    wait(3)
    repeat 7 {
      fx(muzzle, ENG01B)
      fire(exsimple, ENG01D)
      wait(3)
    }
    wait(10)
    repeat 30 {
      dir($0, relative)
      wait(1)
    }
    wait(60)
  }
}

enemy invader {
  init {
    $0 = 90
    dir($0)
    $1 = 0.21
    spd($1)
  }
  run {
    wait(30)
    repeat 24 {
      $1 -= @rnd(0.01, 0.02)
      spd($1)
      wait(1)
    }
    repeat 6 {
      $2 = @rnd(0.03, 0.06)
      fx(muzzle, ENG01B)
      se(shot03, 0.2)
      fire(simple, ENG01B, @aim, $2)
      wait(4)
    }
    repeat 18 {
      $1 -= @rnd(0.01, 0.02)
      spd($1)
      wait(1)
    }
    wait(60)
  }
}

emitter invaderline {
  init {
    $0 = 40
  }
  run {
    repeat 20 {
      appear(invader, invader01, $0, 15)
      $0 += 20
      $1 = 10
      $1 += @rnd(0, 8)
      wait(1)
    }
  }
}

emitter invader5line {
  run {
    repeat 5 {
      emit(invaderline)
      wait(60)
    }
  }
}

// 今のところこれが起点。
emitter main {

  init {
    music_load(s01b)
    music_load(boss01b)
  }

  run {
    music_play(s01b, 0.6)

    wait(5)

    repeat 7 {
      appear(first, invader01, @x, 15)
      wait(20)
    }

    wait(30)

    $0 = @x
    $0 -= 80
    repeat 3 {
      appear(first, invader01, $0, 15)
      $0 -= 30
      wait(20)
    }

    wait(30)

    appear(second, invader01, @x, 15)

    wait(60)

    $0 = @x
    $0 += 100
    appear(third, invader01, $0, 15)
    $0 -= 200
    appear(third, invader01, $0, 15)

    wait(70)

    $0 = @x
    $0 += 150
    appear(third, invader01, $0, 15)
    $0 -= 300
    appear(third, invader01, $0, 15)

    wait(60)

    $0 = @x
    $0 += 80
    repeat 4 {
      appear(first, invader01, $0, 15)
      $0 += 30
      wait(10)
    }

    $0 = @x
    $0 -= 80
    repeat 4 {
      appear(first, invader01, $0, 15)
      $0 -= 30
      wait(10)
    }

    appear(forth, invader01, @x, 15)

  }

}

enemy forth {

  data {
    health := 1000
  }

  init {
    dir(90)
    spd(0.21)
  }

  run {
    wait(25)
    $0 = 0.21
    repeat 21 {
      spd($0)
      $0 -= 0.01
      wait(1)
    }
    spd(0)
    wait(10)

    $0 = @aim
    repeat 12 {
      dir($0)
      se(shot04)
      $0 += @rnd(5,10)
      spd(0.3)
      emit(round12)
      spd(0)
      wait(6)
    }
    repeat 8 {
      dir($0)
      se(shot04)
      $0 += @rnd(3,6)
      spd(0.3)
      emit(round12)
      spd(0)
      wait(8)    
    }
    repeat 64 {
      dir($0)
      se(shot04)
      $0 += @rnd(30,80)
      spd(0.3)
      emit(round12)
      spd(0)
      wait(3)
    }

    wait(7)

    repeat 3 {
      fx(muzzle, ENG01B)
      se(exp02)
      $0 = @aim
      $0 -= 35
      fire(accelshot, A_ENG08R, $0, 0.42)
      $0 += 35
      fire(accelshot, A_ENG08R, $0, 0.42)
      $0 += 35
      fire(accelshot, A_ENG08R, $0, 0.42)
      wait(18)
    }

    dir(90)
    wait(120)

    $0 = 0

    repeat 11 {
      spd($0)
      $0 -= 0.03
      wait(4)
    }
  }
  
}

